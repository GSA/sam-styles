{% if ordered %}
  <ol class="sds-list">
{% else %}
  <ul class="sds-list{% for modifier in modifiers %} sds-list--{{modifier}}{% endfor %}">
{%- endif -%}

  {%- for item in items %}
    <li>
      {%- if item.icon -%}
        {%- render '@icon', item.icon -%}
      {%- endif %}
      {% if item.href -%}
        <a class="usa-link" href="{{item.href}}">
      {%- endif -%}
      {{ item.text }}
      {%- if item.external -%}
        {%- render '@icon', {icon:'external-link-alt', prefix: 'fas', classes: 'fa-xs'} -%}
      {%- endif -%}
      {%- if item.href -%}
        </a>
      {%- endif %}
      {% if item.nested %}
        {% render '@list', {items: item.nested.items, modifiers:['nested']} %}
      {% endif %}

    </li>
  {% endfor %}

{%- if ordered -%}
  </ol>
{%- else -%}
  </ul>
{% endif %}
