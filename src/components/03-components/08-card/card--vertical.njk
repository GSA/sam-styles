<div class="grid-row grid-gap">
	{% for color in colors %}
		<div class="grid-col-12 tablet:grid-col-6">
			<span>{{color.title}}</span>

			<div class="sds-card {% for modifier in modifiers %} sds-card--{{modifier}}{% endfor %}">
				{% if header %}
					<div class="sds-card__header{% if color.modifier %} sds-card__header--{{color.modifier}}{% endif %}">

						{% if header.icon %}
							<div class="sds-card__icon">
								{% render '@icon', header.icon %}
							</div>
						{% endif %}

					</div>
				{% endif %}

				<div class="sds-card__content">
          <h3 class="sds-card__title">{{title}}</h3>
          <p class="usa-prose">{{body}}</p>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
