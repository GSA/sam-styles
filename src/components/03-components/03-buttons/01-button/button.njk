{%- if (name == 'Outline-inverse') -%}
{% set bkg = "bg-base-darkest " -%}
{% endif -%}
{%- if (name == 'White') -%}
{% set bkg = "bg-base-lightest " -%}
{% endif -%}
<div class="{{ bkg }}padding-4">
  <div class="grid-row">
    <div class="grid-col">
      <div class="padding-y-2">{% render '@button--single', button %}</div>
    </div>
    <div class="grid-col">
      <div class="grid-row">
        <div class="grid-col padding-2">
          <button class="usa-button {{button.classes}} usa-button--hover">Hover</button></div>
        <div class="grid-col padding-2">
          <button class="usa-button {{button.classes}} usa-button--active">Active</button></div>
        <div class="grid-col padding-2">
          <button class="usa-button {{button.classes}} usa-focus">Focused</button></div>
      </div>
    </div>
  </div>
</div>